<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:uilib="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_smart_alarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.xm.ui.widget.ListSelectItem
            style="@style/baseListSelectItemStyle"
            android:id="@+id/lsi_smart_alarm_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            uilib:RightClickable="false"
            uilib:ShowBottomLine="true"
            uilib:ShowSwitch="true"
            uilib:ShowTopLine="false"
            uilib:Title="TR_Linked_Alarm" />

        <LinearLayout
            android:id="@+id/ll_smart_alarm_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <com.xm.ui.widget.ListSelectItem
                style="@style/baseListSelectItemStyle"
                android:id="@+id/lsi_smart_alarm_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                uilib:Cap=""
                uilib:ExtraMode="Spinner"
                uilib:ImageRight1="@drawable/icon_next"
                uilib:ImageRight2="@drawable/icon_next"
                uilib:LineColor="@color/line_color"
                uilib:RightClickable="false"
                uilib:ShowBottomLine="true"
                uilib:ShowTopLine="false"
                uilib:Title="TR_Continuous_alarm_time" />

            <com.xm.ui.widget.ListSelectItem
                style="@style/baseListSelectItemStyle"
                android:id="@+id/lsi_smart_alarm_voice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:visibility="visible"
                uilib:Cap=""
                uilib:ExtraMode="SeekBar"
                uilib:ImageRight1="@drawable/icon_next"
                uilib:ImageRight2="@drawable/icon_next"
                uilib:LineColor="@color/line_color"
                uilib:RightClickable="false"
                uilib:ShowBottomLine="true"
                uilib:ShowTopLine="false"
                uilib:Title="TR_Alarm_volume" />

            <com.xm.ui.widget.ListSelectItem
                style="@style/baseListSelectItemStyle"
                android:id="@+id/lsi_smart_alarm_ring"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:visibility="visible"
                uilib:Cap=""
                uilib:ExtraMode="Spinner"
                uilib:ImageRight1="@drawable/icon_next"
                uilib:ImageRight2="@drawable/icon_next"
                uilib:LineColor="@color/line_color"
                uilib:RightClickable="false"
                uilib:ShowBottomLine="true"
                uilib:ShowTopLine="false"
                uilib:Title="TR_Alarm_ringtone" />

            <com.xm.ui.widget.ListSelectItem
                style="@style/baseListSelectItemStyle"
                android:id="@+id/lsi_smart_alarm_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:visibility="visible"
                uilib:LineColor="@color/line_color"
                uilib:RightClickable="false"
                uilib:ShowBottomLine="true"
                uilib:ShowSwitch="true"
                uilib:ShowTopLine="false"
                uilib:Title="TR_Alarm_Light_Switch" />

            <com.xm.ui.widget.ListSelectItem
                style="@style/baseListSelectItemStyle"
                android:id="@+id/lsi_body_trigger"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:visibility="visible"
                uilib:Cap=""
                uilib:ImageRight1="@drawable/icon_next"
                uilib:ImageRight2="@drawable/icon_next"
                uilib:LineColor="@color/line_color"
                uilib:RightClickable="false"
                uilib:ShowBottomLine="true"
                uilib:ShowTopLine="false"
                uilib:Title="TR_Human_body_induction_alarm" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>