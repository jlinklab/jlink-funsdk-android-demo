<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:uilib="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        android:id="@+id/layoutTop"
        layout="@layout/include_title_layout"/>

    <com.xm.ui.widget.ListSelectItem
        android:id="@+id/lsi_cloud_storage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        uilib:Title="云存储"
        uilib:ItemTitleSize="@dimen/normal_text_size"
        uilib:ItemTitleColor="@color/default_normal_text_color"
        uilib:Cap=""
        uilib:CapColor="@color/hint_color"
        uilib:CapSize="@dimen/normal_text_size"
        uilib:ImageRight1="@mipmap/icon_next"
        uilib:ImageRight2="@mipmap/icon_next"
        uilib:RightClickable="false"
        uilib:LineColor="@color/line_color"
        uilib:ShowBottomLine="true"/>

    <com.xm.ui.widget.BtnColorBK
        android:id="@+id/btn_cloud_playback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        uilib:no_press_solid="@color/line_color"
        uilib:pressed_solid="@color/theme_color"
        android:text="云存储回放" />
</LinearLayout>
