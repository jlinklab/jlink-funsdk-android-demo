<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:uilib="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <include
        android:id="@+id/layoutTop"
        layout="@layout/include_title_layout"/>

    <Button
        android:id="@+id/btn_unlock_door"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/common_button_selector_white"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/open_door"
        android:textColor="@drawable/common_text_selector"
        android:textSize="18dp" />

    <!--一键解锁-->
    <Button
        android:id="@+id/btn_one_key_unlock_door"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/common_button_selector_white"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/one_key_open_door"
        android:textColor="@drawable/common_text_selector"
        android:textSize="18dp" />

    <com.xm.ui.widget.ListSelectItem
        android:id="@+id/lsi_unlock_by_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        uilib:Title="密码解锁"
        uilib:ItemTitleColor="@color/default_normal_text_color"
        uilib:ItemTitleSize="@dimen/normal_text_size"
        uilib:ItemTipColor="@color/hint_color"
        uilib:ItemTipSize="@dimen/small_text_size"
        uilib:Tip=""
        uilib:LineColor="@color/line_color"
        uilib:ShowBottomLine="true"
        uilib:ShowTopLine="false"
        uilib:ImageRight1="@mipmap/icon_next"
        uilib:ImageRight2="@mipmap/icon_next"/>

    <com.xm.ui.widget.ListSelectItem
        android:id="@+id/lsi_unlock_by_finger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        uilib:Title="指纹解锁"
        uilib:ItemTitleColor="@color/default_normal_text_color"
        uilib:ItemTitleSize="@dimen/normal_text_size"
        uilib:ItemTipColor="@color/hint_color"
        uilib:ItemTipSize="@dimen/small_text_size"
        uilib:Tip=""
        uilib:LineColor="@color/line_color"
        uilib:ShowBottomLine="true"
        uilib:ShowTopLine="false"
        uilib:ImageRight1="@mipmap/icon_next"
        uilib:ImageRight2="@mipmap/icon_next"/>

    <com.xm.ui.widget.ListSelectItem
        android:id="@+id/lsi_unlock_by_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        uilib:Title="卡解锁"
        uilib:ItemTitleColor="@color/default_normal_text_color"
        uilib:ItemTitleSize="@dimen/normal_text_size"
        uilib:ItemTipColor="@color/hint_color"
        uilib:ItemTipSize="@dimen/small_text_size"
        uilib:Tip=""
        uilib:LineColor="@color/line_color"
        uilib:ShowBottomLine="true"
        uilib:ShowTopLine="false"
        uilib:ImageRight1="@mipmap/icon_next"
        uilib:ImageRight2="@mipmap/icon_next"/>
</LinearLayout>
