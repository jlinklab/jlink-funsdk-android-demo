<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 背景颜色，可以修改成你想要的颜色 -->
    <solid android:color="@android:color/white" />

    <!-- 圆角设置 -->
    <corners android:radius="8dp" />

    <!-- 边框颜色和宽度 -->
    <stroke
        android:width="1dp"
        android:color="@android:color/darker_gray" />

    <!-- 内边距，保证文字不会贴边 -->
    <padding
        android:left="12dp"
        android:top="10dp"
        android:right="12dp"
        android:bottom="10dp" />
</shape>
